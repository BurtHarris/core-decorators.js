{
  "include": ["src/**/*.ts", "test/*.js", "test/unit/*.js"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module":"commonjs",
    "declaration": true,
    "allowUnreachableCode": true,
    "lib": [
      "es5",
      "dom",
      "es2015","es2015.core", "es2015.collection"
    ],
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/*"]
    },
    "rootDirs": [
      "src", "test", "lib"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
